<% 
  if action == :new
    action_url = cats_url
  else
    action_url = cat_url(cat)
  end
  
%>



<form class="" action="<%= action_url %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <label for="name"> Name <br>
    <input class="name" type="text" name="cat[name]" 
    value="<%= cat.name ||= '' %>">
  </label>
  <br>
  <label for="birth_date"> Birth Date <br>
    <input class="birth_date" type="date" name="cat[birth_date]" 
    value="<%= cat.birth_date ||= '' %>">
  </label>
  <br>
  <label for="sex"> Sex <br>
    <input class="sex" type="radio" name="cat[sex]" value="M" <%= cat.sex == 'M' ? 'checked' : '' %>> Male
    <input class="sex" type="radio" name="cat[sex]" value="F" <%= cat.sex == 'F' ? 'checked' : '' %>> Female
  </label>
  <br>
  <label for="color"> Color <br>
    <select class="color" name="cat[color]" value="<%= cat.color %>">
      <option disabled> Select</option>
      <option value="white" " <%= cat.color == 'white' ? 'selected' : '' %> " > white </option>
      <option value="black" " <%= cat.color == 'black' ? 'selected' : '' %> " > black </option>
      <option value="yellow" " <%= cat.color == 'yellow' ? 'selected' : '' %> " > yellow </option>
    </select>
  </label>
  <br><br>
  <label for="description"> Description
    <br>
    <textarea name="cat[description]" rows="8" cols="80">
      <%= cat.description %>
    </textarea>
  </label>
  <br>
  
  <input type="submit" value="<%= action == :edit ? "Update Cat" : "Create Cat" %>">
</form>
<br><br>
<a href="<%= cats_url %>"><button type="button" name="button"> Back to Cat Library </button></a>