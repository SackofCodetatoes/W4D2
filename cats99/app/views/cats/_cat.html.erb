<table>
  <thead>
    <tr>
      <th> Name </th>
      <th> Birth Date </th>
      <th> Color </th>
      <th> Sex </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td> <%= cat.name %> </td>
      <td> <%= cat.birth_date %> </td>
      <td> <%= cat.color %> </td>
      <td> <%= cat.sex %> </td>
    </tr>
  </tbody>
</table>
<h3>Description</h3>
<p> <%= cat.description %> </p>

<% if action == :index %>
  <a href="<%= cat_url(cat) %>"> <button type="button" name="button"> Show this cat </button></a>
<% else %>
  <a href="<%= cats_url %>"><button type="button" name="button"> Back to Cat Library </button></a>
<% end %>

